/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();

  /* USER CODE BEGIN 2 */
  //RecepciÃ³n con ISR
  HAL_UART_Receive_IT(&huart2, buffer, 1);
  //uint8_t Text[]="EL GANADOR ES";
  //HAL_UART_Transmit(&huart2, Text, sizeof(Text),1000);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
	  if (juego_iniciado==1&&iniciar==0){
		  HAL_GPIO_WritePin(ROJO_GPIO_Port, ROJO_Pin, GPIO_PIN_SET);
		  HAL_GPIO_WritePin(AMARILLO_GPIO_Port, AMARILLO_Pin, GPIO_PIN_RESET);
		  HAL_GPIO_WritePin(VERDE_GPIO_Port, VERDE_Pin, GPIO_PIN_RESET);
		  HAL_Delay(1000);
		  iniciar=1;
	  }

	  if(juego_iniciado==1&&iniciar==1){
		  HAL_GPIO_WritePin(ROJO_GPIO_Port, ROJO_Pin, GPIO_PIN_RESET);
		  HAL_GPIO_WritePin(AMARILLO_GPIO_Port, AMARILLO_Pin, GPIO_PIN_SET);
		  HAL_Delay(1000);
		  iniciar=2;
	  }

	  if(juego_iniciado==1&&iniciar==2){
		  HAL_GPIO_WritePin(AMARILLO_GPIO_Port, AMARILLO_Pin, GPIO_PIN_RESET);
		  HAL_GPIO_WritePin(VERDE_GPIO_Port, VERDE_Pin, GPIO_PIN_SET);
		  HAL_Delay(1000);
		  iniciar=3;
	  }
	  if(juego_iniciado==1&&iniciar==3){
		  HAL_GPIO_WritePin(VERDE_GPIO_Port, VERDE_Pin, GPIO_PIN_RESET);
		  iniciar=4;
	  }

	  	//HAL_UART_Receive(&huart2, &dato, 1, HAL_MAX_DELAY);

	  if (contador1>4){
		  juego_iniciado=0;
		  iniciar=0;
		  HAL_UART_Transmit(&huart2, ganador1, sizeof(ganador1),1000);
		  HAL_Delay(300);
		  contador1=0;
		  contador2=0;
	  }
	  if (contador2>4){
		  juego_iniciado=0;
		  iniciar=0;
		  HAL_UART_Transmit(&huart2, ganador2, sizeof(ganador2),1000);
		  HAL_Delay(300);
		  contador1=0;
		  contador2=0;
	  }

	  switch(contador1){
	  case 0:
		  HAL_GPIO_WritePin(p1_L1_GPIO_Port, p1_L1_Pin, 0);
		  HAL_GPIO_WritePin(p1_L2_GPIO_Port, p1_L2_Pin, 0);
		  HAL_GPIO_WritePin(p1_L3_GPIO_Port, p1_L3_Pin, 0);
		  HAL_GPIO_WritePin(p1_L4_GPIO_Port, p1_L4_Pin, 0);
		  break;
	  case 1:
		  HAL_GPIO_WritePin(p1_L1_GPIO_Port, p1_L1_Pin, 1);
		  HAL_GPIO_WritePin(p1_L2_GPIO_Port, p1_L2_Pin, 0);
		  HAL_GPIO_WritePin(p1_L3_GPIO_Port, p1_L3_Pin, 0);
		  HAL_GPIO_WritePin(p1_L4_GPIO_Port, p1_L4_Pin, 0);
		  break;
	  case 2:
		  HAL_GPIO_WritePin(p1_L1_GPIO_Port, p1_L1_Pin, 0);
		  HAL_GPIO_WritePin(p1_L2_GPIO_Port, p1_L2_Pin, 1);
		  HAL_GPIO_WritePin(p1_L3_GPIO_Port, p1_L3_Pin, 0);
		  HAL_GPIO_WritePin(p1_L4_GPIO_Port, p1_L4_Pin, 0);
		  break;
	  case 3:
		  HAL_GPIO_WritePin(p1_L1_GPIO_Port, p1_L1_Pin, 0);
		  HAL_GPIO_WritePin(p1_L2_GPIO_Port, p1_L2_Pin, 0);
		  HAL_GPIO_WritePin(p1_L3_GPIO_Port, p1_L3_Pin, 1);
		  HAL_GPIO_WritePin(p1_L4_GPIO_Port, p1_L4_Pin, 0);
		  break;
	  case 4:
		  HAL_GPIO_WritePin(p1_L1_GPIO_Port, p1_L1_Pin, 0);
		  HAL_GPIO_WritePin(p1_L2_GPIO_Port, p1_L2_Pin, 0);
		  HAL_GPIO_WritePin(p1_L3_GPIO_Port, p1_L3_Pin, 0);
		  HAL_GPIO_WritePin(p1_L4_GPIO_Port, p1_L4_Pin, 1);
		  break;
	  }

	  switch(contador2){
	  case 0:
		  HAL_GPIO_WritePin(p2_L1_GPIO_Port, p2_L1_Pin, 0);
		  HAL_GPIO_WritePin(p2_L2_GPIO_Port, p2_L2_Pin, 0);
		  HAL_GPIO_WritePin(p2_L3_GPIO_Port, p2_L3_Pin, 0);
		  HAL_GPIO_WritePin(p2_L4_GPIO_Port, p2_L4_Pin, 0);
		  break;
	  case 1:
		  HAL_GPIO_WritePin(p2_L1_GPIO_Port, p2_L1_Pin, 1);
		  HAL_GPIO_WritePin(p2_L2_GPIO_Port, p2_L2_Pin, 0);
		  HAL_GPIO_WritePin(p2_L3_GPIO_Port, p2_L3_Pin, 0);
		  HAL_GPIO_WritePin(p2_L4_GPIO_Port, p2_L4_Pin, 0);
		  break;
	  case 2:
		  HAL_GPIO_WritePin(p2_L1_GPIO_Port, p2_L1_Pin, 0);
		  HAL_GPIO_WritePin(p2_L2_GPIO_Port, p2_L2_Pin, 1);
		  HAL_GPIO_WritePin(p2_L3_GPIO_Port, p2_L3_Pin, 0);
		  HAL_GPIO_WritePin(p2_L4_GPIO_Port, p2_L4_Pin, 0);
		  break;
	  case 3:
		  HAL_GPIO_WritePin(p2_L1_GPIO_Port, p2_L1_Pin, 0);
		  HAL_GPIO_WritePin(p2_L2_GPIO_Port, p2_L2_Pin, 0);
		  HAL_GPIO_WritePin(p2_L3_GPIO_Port, p2_L3_Pin, 1);
		  HAL_GPIO_WritePin(p2_L4_GPIO_Port, p2_L4_Pin, 0);
		  break;
	  case 4:
		  HAL_GPIO_WritePin(p2_L1_GPIO_Port, p2_L1_Pin, 0);
		  HAL_GPIO_WritePin(p2_L2_GPIO_Port, p2_L2_Pin, 0);
		  HAL_GPIO_WritePin(p2_L3_GPIO_Port, p2_L3_Pin, 0);
		  HAL_GPIO_WritePin(p2_L4_GPIO_Port, p2_L4_Pin, 1);
		  break;
	  }

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

