/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
uint8_t contador1=0;
uint8_t contador2=0;

uint8_t buffer[1];
uint8_t dato=80;
uint8_t datoArray[3];

volatile uint8_t juego_iniciado=0;
volatile uint8_t juego_finalizado=0;

volatile uint32_t ultimop1=0;
volatile uint32_t ultimop2=0;

volatile uint8_t iniciar=0;

uint8_t ganador1[]="Jugador 1 es el ganador \r\n";
uint8_t ganador2[]="Jugador 2 es el ganador \r\n";
/* USER CODE END PV */

