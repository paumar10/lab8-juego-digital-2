/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};
  /* USER CODE BEGIN MX_GPIO_Init_1 */

  /* USER CODE END MX_GPIO_Init_1 */

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOC, p2_L1_Pin|p2_L2_Pin|p1_L1_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(p2_L4_GPIO_Port, p2_L4_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, p2_L3_Pin|p1_L4_Pin|p1_L3_Pin|p1_L2_Pin
                          |VERDE_Pin|AMARILLO_Pin|ROJO_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pins : p2_L1_Pin p2_L2_Pin p1_L1_Pin */
  GPIO_InitStruct.Pin = p2_L1_Pin|p2_L2_Pin|p1_L1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOC, &GPIO_InitStruct);

  /*Configure GPIO pin : p2_L4_Pin */
  GPIO_InitStruct.Pin = p2_L4_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(p2_L4_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pin : p1_Pin */
  GPIO_InitStruct.Pin = p1_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  HAL_GPIO_Init(p1_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pins : p2_L3_Pin p1_L4_Pin p1_L3_Pin p1_L2_Pin
                           VERDE_Pin AMARILLO_Pin ROJO_Pin */
  GPIO_InitStruct.Pin = p2_L3_Pin|p1_L4_Pin|p1_L3_Pin|p1_L2_Pin
                          |VERDE_Pin|AMARILLO_Pin|ROJO_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  /*Configure GPIO pin : p2_Pin */
  GPIO_InitStruct.Pin = p2_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_IT_FALLING;
  GPIO_InitStruct.Pull = GPIO_PULLUP;
  HAL_GPIO_Init(p2_GPIO_Port, &GPIO_InitStruct);

  /* EXTI interrupt init*/
  HAL_NVIC_SetPriority(EXTI9_5_IRQn, 0, 0);
  HAL_NVIC_EnableIRQ(EXTI9_5_IRQn);

  /* USER CODE BEGIN MX_GPIO_Init_2 */

  /* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
	if (buffer[0]=='S'){
		if(juego_iniciado==0){
			juego_iniciado=1;
			juego_finalizado=0;
			contador1=0;
			contador2=0;
		}
	}
	HAL_UART_Receive_IT(&huart2, buffer,1);
}

void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin){
	if(juego_iniciado==1&&iniciar==4){
		if(HAL_GPIO_ReadPin(p1_GPIO_Port, p1_Pin)==0){
			if(HAL_GetTick()-ultimop1>400){
				contador1++;
				ultimop1=HAL_GetTick();
			}
		}
		if(HAL_GPIO_ReadPin(p2_GPIO_Port, p2_Pin)==0){
			if(HAL_GetTick()-ultimop2>400){
				contador2++;
				ultimop2=HAL_GetTick();
			}
		}
	}
}
